<Window x:Class="IocDemo.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IocDemo.WpfApp"
        mc:Ignorable="d"
        Title="IoC Demo - Dependency Injection in .NET" Height="650" Width="950">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="🚀 IoC (Inversion of Control) Demo Application"
                   FontSize="22" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"
                   Foreground="#2E86AB"/>
        
        <!-- Description -->
        <Border Grid.Row="1" Background="#E8F4FD" Padding="15" Margin="0,0,0,20">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Border.Style>
            <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="22">
                <Run Text="This application demonstrates Inversion of Control (IoC) principles in .NET:"/>
                <LineBreak/>
                <Run Text="✓ " FontWeight="Bold" Foreground="Green"/><Run Text="Constructor Injection: OrderService receives dependencies through its constructor"/>
                <LineBreak/>
                <Run Text="✓ " FontWeight="Bold" Foreground="Green"/><Run Text="Loose Coupling: Components depend on abstractions (interfaces), not concrete implementations"/>
                <LineBreak/>
                <Run Text="✓ " FontWeight="Bold" Foreground="Green"/><Run Text="Testability: Easy to replace dependencies with mocks for unit testing"/>
                <LineBreak/>
                <Run Text="✓ " FontWeight="Bold" Foreground="Green"/><Run Text="Logging: Integrated Serilog for comprehensive logging"/>
            </TextBlock>
        </Border>
        
        <!-- Current Configuration -->
        <Border Grid.Row="2" Background="#FFF3CD" Padding="10" Margin="0,0,0,15">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Border.Style>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📧 Current Message Sender:" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding MessageSenderType}" Margin="10,0,0,0" 
                          FontWeight="Bold" Foreground="#856404"/>
                <TextBlock Text="(Configured via DI Container)" Margin="10,0,0,0" 
                          FontStyle="Italic" Foreground="#856404"/>
            </StackPanel>
        </Border>
        
        <!-- Control Panel -->
        <Border Grid.Row="3" Background="#F8F9FA" Padding="15" Margin="0,0,0,15">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Border.Style>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Order ID:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,8,0"/>
                    <TextBox Text="{Binding OrderIdInput, UpdateSourceTrigger=PropertyChanged}" 
                             Width="150" Height="30" VerticalAlignment="Center" 
                             Margin="0,0,15,0" Padding="8,5" FontSize="12"/>
                    
                    <Button Content="📦 Place Order" 
                            Command="{Binding PlaceOrderCommand}"
                            Padding="15,8" Margin="0,0,10,0"
                            Background="#28A745" Foreground="White" 
                            BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="📊 Show Summary" 
                            Command="{Binding ShowOrdersCommand}"
                            Padding="15,8" Margin="0,0,10,0"
                            Background="#007BFF" Foreground="White" 
                            BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <Button Content="🗑️ Clear" 
                            Command="{Binding ClearOutputCommand}"
                            Padding="15,8"
                            Background="#6C757D" Foreground="White" 
                            BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="4" 
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
                
                <!-- Dynamic Sender Control -->
                <Border Background="#E7F3FF" Padding="10" Margin="0,10,0,0" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="� Dynamic Message Sender Control" FontWeight="Bold" Margin="0,0,0,8" Foreground="#0066CC"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Current Sender:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding CurrentSenderType}" VerticalAlignment="Center" 
                                      FontWeight="Bold" Foreground="#0066CC" Margin="0,0,15,0"/>
                            
                            <Button Content="📧 Switch to Email" 
                                    Command="{Binding SwitchToEmailCommand}"
                                    Padding="10,5" Margin="0,0,8,0"
                                    Background="#17A2B8" Foreground="White" 
                                    BorderThickness="0" FontSize="11">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="3" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button Content="📱 Switch to SMS" 
                                    Command="{Binding SwitchToSmsCommand}"
                                    Padding="10,5" Margin="0,0,8,0"
                                    Background="#FFC107" Foreground="Black" 
                                    BorderThickness="0" FontSize="11">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="3" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button Content="🚀 Process with Current Sender" 
                                    Command="{Binding ProcessOrderDynamicCommand}"
                                    Padding="10,5"
                                    Background="#DC3545" Foreground="White" 
                                    BorderThickness="0" FontSize="11">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            CornerRadius="3" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                        VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                        <TextBlock Text="💡 Switch between Email and SMS senders at runtime!" 
                                  FontStyle="Italic" Foreground="#0066CC" FontSize="10"/>
                    </StackPanel>
                </Border>
                
                <TextBlock Text="�💡 Tip: Try placing multiple orders and check the summary to see how data flows through the IoC container!"
                          FontStyle="Italic" Foreground="#495057" FontSize="11" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Output Area -->
        <Border Grid.Row="4" BorderBrush="#DEE2E6" BorderThickness="2" 
                Background="White">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Border.Style>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="#495057">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6,6,0,0"/>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="📋 Application Output" 
                              Foreground="White" FontWeight="Bold" 
                              Padding="15,8" FontSize="13"/>
                </Border>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
                             Padding="15" Background="#FAFAFA">
                    <TextBlock Text="{Binding Output}" 
                               TextWrapping="Wrap" 
                               FontFamily="Consolas"
                               FontSize="12"
                               Foreground="#212529"
                               LineHeight="18"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
